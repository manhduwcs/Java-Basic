package myCompany;

public class Employee extends Person {
    private String position;
    private double salary;
    private int hoursWorked;
    private double tax;
    private double rate;

    public Employee(String position, String name, double salary, int age, int hoursWorked) {
	super(name, age);
	this.position = position;
	this.hoursWorked = hoursWorked;
	this.salary = salary;
    }

    // Tax : salary < 1000USD : 3% ; salary >= 1000USD : 5% ; >= 2000USD : 7%; >=
    // 3000USD : 10%
    // rate - hrs : 1 - <100hr | 1.05 - >=100hr | 1.1 - >=200hr | 1.25 - >=300hr
    public void showEmployeeInfor() {
	double grossSalary = grossSalary();
	double netSalary = netSalary();
	System.out.println("---Employee " + getName() + " information---");
	System.out.println("Name : " + getName());
	System.out.println("Age : " + getAge());
	System.out.println("Default : " + this.salary);
	System.out.println("Hours worked = " + this.hoursWorked);
	System.out.println("Tax = " + this.tax);
	System.out.println("Salary Rate = " + this.rate);
	if (grossSalary != 0 && netSalary != 0) {
	    System.out.println("Real Salary : ");
	    System.out.println("\tGross Salary = " + grossSalary);
	    System.out.println("\tNet Salary = " + netSalary);
	} else {
	    System.out.println("Error : This employee's salary haven't been caculated yet.");
	}
	System.out.println("______________________________________________");
    }

    public double calculateGrossSalary() {
	return salary + (salary*getSalaryRate());
    }
    
    public double calculateNetSalary() {
	return salary*get
    }
    
    public double getSalaryRate() {
	if (this.hoursWorked >= 300) {
	    rate = 1.25;
	    return rate;
	} else if (this.hoursWorked >= 200) {
	    rate = 1.1;
	    return rate;
	} else if (this.hoursWorked >= 100) {
	    rate = 1.05;
	    return rate;
	} else if (this.hoursWorked < 100) {
	    rate = 1;
	    return rate;
	}
	return 0;
    }

    public double getSalaryTax() {
	if(salary>=3000) {
	    this.tax = 10;
	    return tax;
	}
	else if(salary>=2000) {
	    this.tax= 7;
	    return tax;
	}
	else if(salary>=1000) {
	    this.tax= 5;
	    return tax;
	}
	else if(salary<1000) {
	    this.tax= 3;
	    return tax;
	}
	return 0;
    }

    public String getPosition() {
	return this.position;
    }

    public void setPosition(String position) {
	this.position = position;
    }

    public double getSalary() {
	return salary;
    }

    public void setSalary(double salary) {
	this.salary = salary;
    }

    public int getHoursWorked() {
	return hoursWorked;
    }

    public void setHoursWorked(int hoursWorked) {
	this.hoursWorked = hoursWorked;
    }

}
