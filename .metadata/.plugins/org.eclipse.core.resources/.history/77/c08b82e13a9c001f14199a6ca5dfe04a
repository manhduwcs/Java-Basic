package myCompany;

public class Employee extends Person {
    private String position;
    private double salary;
    private int hoursWorked;
    private double tax;
    private double rate;

    public Employee(String position, String name, double salary, int age, int hoursWorked) {
	super(name, age);
	this.position = position;
	this.hoursWorked = hoursWorked;
	this.salary = salary;
    }

    // Tax : salary < 1000USD : 3% ; salary >= 1000USD : 5% ; >= 2000USD : 7%; >=
    // 3000USD : 10%
    // rate - hrs : 1 - <100hr | 1.05 - >=100hr | 1.1 - >=200hr | 1.25 - >=300hr
    public double grossSalary() {
	if (this.hoursWorked >= 300) {
	    this.rate = 1.25;
	    return salary * rate;
	} else if (this.hoursWorked >= 200) {
	    this.rate = 1.1;
	    return salary * rate;
	} else if (this.hoursWorked >= 100) {
	    this.rate = 1.05;
	    return salary * rate;
	} else if (this.hoursWorked < 100) {
	    this.rate = 1;
	    return salary * rate;
	}
	return 0;
    }

    public double netSalary() {
	if (grossSalary() != 0) {
	    double grossSalary = grossSalary();
	    if (grossSalary >= 3000) {
		this.tax = 10;
		return grossSalary - (grossSalary * (this.tax / 100));
	    } else if (grossSalary >= 2000) {
		this.tax = 7;
		return grossSalary - (grossSalary * (this.tax / 100));
	    } else if (grossSalary >= 1000) {
		this.tax = 5;
		return grossSalary - (grossSalary * (this.tax / 100));
	    } else if (grossSalary < 1000) {
		this.tax = 3;
		return grossSalary - (grossSalary * (this.tax / 100));
	    }
	}
	return 0;
    }

    public String getPosition() {
	return this.position;
    }

    public void setPosition(String position) {
	this.position = position;
    }

    public double getSalary() {
	return salary;
    }

    public void setSalary(double salary) {
	this.salary = salary;
    }

    public int getHoursWorked() {
	return hoursWorked;
    }

    public void setHoursWorked(int hoursWorked) {
	this.hoursWorked = hoursWorked;
    }

}
